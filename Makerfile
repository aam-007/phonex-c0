CC = gcc
CFLAGS = -std=c99 -O3 -Wall -I./include
LDFLAGS = -lm
SRC = src/tensor.c src/attention.c src/layernorm.c src/ffw.c \
      src/loss.c src/optimizer.c src/tokenizer.c src/main.c
OBJ = $(SRC:.c=.o)
TARGET = phonex

all: $(TARGET)

$(TARGET): $(OBJ)
	$(CC) $(OBJ) -o $(TARGET) $(LDFLAGS)

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	rm -f src/*.o $(TARGET)